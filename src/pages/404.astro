---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout 
  title="Page Not Found" 
  description="The page you're looking for doesn't exist."
>
  <Hero 
    title="Page Not Found" 
    subtitle="The page you're looking for doesn't exist."
    backgroundImage="https://t3.ftcdn.net/jpg/05/59/74/36/240_F_559743693_dAUFbSqvfH03wwPI8YmWWB5d9wc4yDJy.jpg"
    height="h-[40vh]"
  />
  
  <section class="py-16 bg-white">
    <div class="temple-container text-center">
      <h2 class="text-4xl font-heading text-temple-navy mb-6">404 Error</h2>
      <p class="text-gray-700 mb-8">The page you're looking for might have been removed or is temporarily unavailable.</p>
      <a 
        href="/" 
        class="inline-block px-6 py-3 bg-temple-red text-white font-medium rounded-md hover:bg-temple-brown transition-colors duration-300"
      >
        Return Home
      </a>
    </div>
  </section>
</Layout>