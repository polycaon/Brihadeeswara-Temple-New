---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  height?: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage,
  height = "h-[30vh]"
} = Astro.props;
---

<section 
  class={`relative ${height} flex items-center justify-center bg-temple-navy bg-cover bg-center`}
  style={`background-image: linear-gradient(rgba(20, 30, 48, 0.7), rgba(20, 30, 48, 0.7)), url(${backgroundImage});`}
>
  <div class="text-center z-10 px-4 max-w-4xl mx-auto" data-aos="fade-up">
    <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl mb-4 text-temple-gold font-bold">{title}</h1>
    {subtitle && <p class="text-xl md:text-2xl max-w-3xl mx-auto text-temple-stone font-semibold">{subtitle}</p>}
  </div>
</section>