---
interface Props {
  url: string;
  title: string;
  description: string;
}

const { url, title, description } = Astro.props;
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);
---

<div class="flex items-center space-x-4 mt-8">
  <span class="text-gray-700 font-semibold">Share:</span>
  <a 
    href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="text-[#1877f2] hover:opacity-80 transition-opacity"
    aria-label="Share on Facebook"
  >
    Facebook
  </a>
  <a 
    href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="text-[#1da1f2] hover:opacity-80 transition-opacity"
    aria-label="Share on Twitter"
  >
    Twitter
  </a>
  <a 
    href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodedUrl}&title=${encodedTitle}&summary=${encodedDescription}`}
    target="_blank"
    rel="noopener noreferrer"
    class="text-[#0a66c2] hover:opacity-80 transition-opacity"
    aria-label="Share on LinkedIn"
  >
    LinkedIn
  </a>
  <a 
    href={`mailto:?subject=${encodedTitle}&body=${encodedDescription}%0A%0A${encodedUrl}`}
    class="text-gray-700 hover:opacity-80 transition-opacity"
    aria-label="Share via Email"
  >
    Email
  </a>
</div>